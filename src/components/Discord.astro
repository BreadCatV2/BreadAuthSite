---
export interface Props {
    name: string;
    invite: string;
    header: string;
    pic: string;
    desc: string;
}

const { name, invite, header, pic, desc } = Astro.props;
---
<!--- Discord Invite Widget, header is the header image, pic is the profile picture --->
<div class="discord-widget">
    <div class="discord-widget-header">
        <img src={header} alt="Discord Header" />
    </div>
    <div class="discord-widget-content">
        <div class="discord-widget-content-left">
            <img src={pic} alt="Discord Profile Picture" />
        </div>
        <div class="discord-widget-content-right">
            <h1>{name}</h1>
            <p>{desc}</p>
            <a href={"https://discord.gg/"+invite} target="_blank" rel="noopener noreferrer">Join Now</a>
        </div>
    </div>
</div>

<style>
    .discord-widget {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #2c2f33;
        border-radius: 0.5vw;
        overflow: hidden;
    }
    .discord-widget-header {
        width: 100%;
        height: 10vw;
        background-color: #2c2f33;
        overflow: hidden;
    }
    .discord-widget-header img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .discord-widget-content {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 1vw;
    }
    .discord-widget-content-left {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .discord-widget-content-left img {
        width: 8vw;
        height: 8vw;
        border-radius: 50%;
        object-fit: cover;
    }
    .discord-widget-content-right {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1vw;
    }
    .discord-widget-content-right h1 {
        font-size: 1.7vw;
        font-weight: 700;
        color: #fff;
        margin: 0;
    }
    .discord-widget-content-right p {
        font-size: 0.85vw;
        font-weight: 400;
        color: #fff;
        margin: 0;
        text-align: center;
    }
    .discord-widget-content-right a {
        font-size: 0.85vw;
        font-weight: 700;
        color: #fff;
        text-decoration: none;
        background: var(--accent-gradient);
        padding: 0.5vw 1vw;
        border-radius: 5px;
        margin-top: 1vw;
    }
    .discord-widget-content-right a:hover {
        background: var(--accent-gradient);
        background-size: 200% auto;
        animation: gradient 1s linear;
    }
    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @media only screen and (max-width: 768px) {
        .discord-widget {
            width: 100%;
            height: 100%;
            border-radius: 1vw;
        }
        .discord-widget-header {
            width: 100%;
            height: 20vw;
        }
        .discord-widget-content {
            width: 100%;
            height: 100%;
            flex-direction: column;
            padding: 2vw;
        }
        .discord-widget-content-left {
            width: 100%;
            height: 100%;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
        .discord-widget-content-left img {
            width: 10vw;
            height: 10vw;
            margin-right: 2vw;
        }
        .discord-widget-content-right {
            width: 100%;
            height: 100%;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .discord-widget-content-right h1 {
            font-size: 3vw;
        }
        .discord-widget-content-right p {
            font-size: 1.5vw;
        }
        .discord-widget-content-right a {
            font-size: 1.5vw;
            padding: 1vw 2vw;
            margin-top: 2vw;
        }
    }
</style>