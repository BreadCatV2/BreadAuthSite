---
export interface Props {
  username: string;
  uuid: string;
  token: string | null;
}

const { username, uuid, token } = Astro.props
---
<!-- a token container is a little box that contains a username, uuid, and token -->
<div class="token-container">
    <!-- a token is a little box that contains a username, uuid, and token -->
    <div class="token">
        <div class="token__username">
            <p class="token__username-text">Username: {username}</p>
        </div>
        <div class="token__uuid">
            <p class="token__uuid-text">UUID: {uuid}</p>
        </div>
        <div class="token__token">
            <p class="token__token-text">Token: {token}</p>
        </div>
    </div>
</div>
<style>
.token-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    background-color: #1a1a1a;
}

.token {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 300px;
    width: 300px;
    background-color: #2a2a2a;
    border-radius: 10px;
}

.token__username {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 100%;
    background-color: #3a3a3a;
    border-radius: 10px;
}

.token__username-text {
    font-size: 20px;
    color: #ffffff;
}

.token__uuid {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 100%;
    background-color: #3a3a3a;
    border-radius: 10px;
}

.token__uuid-text {
    font-size: 20px;
    color: #ffffff;
}

.token__token {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 100%;
    background-color: #3a3a3a;
    border-radius: 10px;
}

.token__token-text {
    font-size: 20px;
    color: #ffffff;
}
</style>

